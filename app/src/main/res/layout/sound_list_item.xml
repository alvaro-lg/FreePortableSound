<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:descendantFocusability = "blocksDescendants"
    android:background="@color/background">

    <!-- Sound name -->
    <TextView
        android:id="@+id/textSoundName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="@string/default_name"
        />

    <!-- Sound username -->
    <TextView
        android:id="@+id/textSoundUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/textSoundName"
        android:layout_alignParentStart="true"
        android:text="@string/default_username"
        />

    <!-- Play button -->
    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_play_button"
        android:background="@drawable/rounded_red_button_background"
        android:layout_below="@id/textSoundUsername"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/textSoundName"
        android:layout_marginStart="16dp"
        />
</RelativeLayout>